{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Glossary",
  "description": "Structured domain glossary for LLM context (glossary-v1 format).",
  "type": "object",
  "required": ["version", "terms"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["term", "definition"],
        "properties": {
          "term": {
            "type": "string",
            "minLength": 1,
            "description": "Unique term identifier (case-insensitive dedup)."
          },
          "definition": {
            "type": "string",
            "minLength": 1,
            "description": "Concise definition (1-3 sentences)."
          },
          "scope": {
            "type": "string",
            "description": "\"global\" or a specific module name."
          },
          "aliases": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Synonyms or abbreviations."
          },
          "see_also": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Related terms."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
