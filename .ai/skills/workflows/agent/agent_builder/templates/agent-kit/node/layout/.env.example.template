# LLM provider
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=<set-me>
LLM_MODEL=gpt-4.1

# Agent runtime
AGENT_ENABLED=true
AGENT_LOG_LEVEL=info
AGENT_PORT=8080
AGENT_BASE_PATH=__AGENT_BASE_PATH__

# Worker (file-queue dev mode)
AGENT_WORKER_INPUT_DIR=var/worker/input
AGENT_WORKER_OUTPUT_DIR=var/worker/output
AGENT_WORKER_POLL_INTERVAL_MS=1000

# Cron adapter
AGENT_CRON_INPUT_JSON={"input":{"text":"scheduled run"}}
AGENT_CRON_OUTPUT_FILE=var/cron/output.json
