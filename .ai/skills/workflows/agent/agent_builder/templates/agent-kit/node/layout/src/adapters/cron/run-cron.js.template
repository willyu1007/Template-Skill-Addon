import fs from 'fs';
import path from 'path';
import { loadConfig, log } from '../../core/config.js';
import { runAgent } from '../../core/agent.js';
import { toErrorResponse } from '../../core/errors.js';

function ensureDirForFile(p) {
  fs.mkdirSync(path.dirname(p), { recursive: true });
}

function readInput(cfg) {
  if (cfg.cron.inputJsonEnv) {
    try { return JSON.parse(cfg.cron.inputJsonEnv); } catch {}
  }
  if (cfg.cron.inputFile) {
    try { return JSON.parse(fs.readFileSync(cfg.cron.inputFile, 'utf8')); } catch {}
  }
  return { input: {} };
}

async function main() {
  const cfg = loadConfig();
  const req = readInput(cfg);

  try {
    const output = await runAgent(req, { requestId: 'cron_' + Date.now() });
    if (cfg.cron.outputFile) {
      ensureDirForFile(cfg.cron.outputFile);
      fs.writeFileSync(cfg.cron.outputFile, JSON.stringify(output, null, 2));
      log('info', { msg: 'cron_written', path: cfg.cron.outputFile });
    } else {
      process.stdout.write(JSON.stringify(output, null, 2) + '\n');
    }
  } catch (err) {
    const e = toErrorResponse(err);
    process.stderr.write(JSON.stringify(e, null, 2) + '\n');
    process.exit(1);
  }
}

main();
