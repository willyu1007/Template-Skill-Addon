{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project State",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "stage",
    "context"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "stage": {
      "type": "string",
      "enum": [
        "prototype",
        "mvp",
        "production",
        "maintenance",
        "archived"
      ]
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "enabled",
        "mode"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "mode": {
          "type": "string",
          "enum": [
            "contract",
            "snapshot"
          ]
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "runtime": {
      "type": "object",
      "additionalProperties": true,
      "description": "Non-secret runtime config references (e.g., env var names). Do not store secrets."
    }
  }
}